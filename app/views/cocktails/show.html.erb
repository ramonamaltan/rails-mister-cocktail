<%= @cocktail.name %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'Do you really want to delete this ingredient'} %> </li>
  <% end %>
</ul>

<%= link_to 'Back to all Cocktails', cocktails_path %>
<%= link_to 'Add Ingredients',  new_cocktail_dose_path(@cocktail)%>
