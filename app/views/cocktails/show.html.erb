<div class="container m-5">
  <h1 class="m-5"><%= @cocktail.name %></h1>
  <div class="card-product m-5">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
    <div class="card-product-infos">
      <h2>Ingredients for <%= @cocktail.name %></h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: 'Do you really want to delete this ingredient'} %> </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="d-flex flex-column justify-content-center mb-5 mx-5">
    <div class="flex-shrink-1"><%= link_to 'Add Ingredients',  new_cocktail_dose_path(@cocktail), class: "btn btn-strong" %></div>
    <div class="flex-shrink-1 mt-3"><%= link_to 'Back to all Cocktails', cocktails_path, class: "btn btn-strong" %></div>
    
  </div>
</div>
