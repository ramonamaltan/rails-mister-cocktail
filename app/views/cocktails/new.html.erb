<div class="container my-5">

  <h1 class="m-5">Add your favorite Cocktail</h1>

  <%= simple_form_for @cocktail, html: { class: "form-group mx-5 mb-3"} do |f| %>
    <%= f.input :name, input_html: {class: "form-control form-control-lg"} %>
    <%= f.input :photo, as: :file, input_html: {class: "form-control form-control-lg"} %>
    <%= f.submit "Create Cocktail", class: 'btn btn-strong mt-3'%>
  <% end %>

  <%= link_to 'Back to all cocktails', root_path, class: 'btn btn-strong ml-5' %>
</div>


  