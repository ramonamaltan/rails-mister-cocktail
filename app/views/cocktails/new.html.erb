<div class="container my-5">

  <h1 class="m-5">Add your favorite Cocktail</h1>

  <%= simple_form_for @cocktail, html: { class: "form-group m-5"} do |f| %>
    <%= f.input :name, input_html: {class: "form-control form-control-lg"} %>
    <%= f.submit "Create Cocktail", class: 'btn btn-strong mt-3'%>
  <% end %>
</div>

  